
{
  "test_cases": [
    {
      "name": "List empty tasks",
      "method": "GET",
      "endpoint": "/api/tasks/",
      "payload": null,
      "expected_status": 200,
      "expected_response_contains": ["results"],
      "notes": "Expect empty list"
    },
    {
      "name": "Create task",
      "method": "POST",
      "endpoint": "/api/tasks/",
      "payload": {"title": "Test Task", "description": "A test task", "completed": false},
      "expected_status": 201,
      "expected_response_contains": ["id", "title", "completed"],
      "notes": "Creation returns created resource with id and created_at"
    },
    {
      "name": "Retrieve task",
      "method": "GET",
      "endpoint": "/api/tasks/{id}/",
      "payload": null,
      "expected_status": 200,
      "expected_response_contains": ["title"],
      "notes": "Use id returned from create step"
    },
    {
      "name": "Partial update task",
      "method": "PATCH",
      "endpoint": "/api/tasks/{id}/",
      "payload": {"completed": true},
      "expected_status": 200,
      "expected_response_contains": ["completed"],
      "notes": "Partial update changes completed"
    },
    {
      "name": "Delete task",
      "method": "DELETE",
      "endpoint": "/api/tasks/{id}/",
      "payload": null,
      "expected_status": 204,
      "expected_response_contains": [],
      "notes": "Resource removed"
    },
    {
      "name": "Create invalid (missing title)",
      "method": "POST",
      "endpoint": "/api/tasks/",
      "payload": {"description": "No title"},
      "expected_status": 400,
      "expected_response_contains": ["title"],
      "notes": "Validation error"
    },
    {
      "name": "Retrieve invalid ID",
      "method": "GET",
      "endpoint": "/api/tasks/9999/",
      "payload": null,
      "expected_status": 404,
      "expected_response_contains": [],
      "notes": "Non-existent resource returns 404"
    }
  ]
}

